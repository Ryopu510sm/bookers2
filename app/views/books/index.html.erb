
<!--bookのindexページの左側の作成(User info)-->
<%= render 'books_index', user: @user, newbook: @newbook, book: @book %>


<!--bookのindexページの右側の作成(Books)-->


  <div class="col-md-8 offset-md-1"> 右コンテンツエリア
    <h1>Books</h1>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <% if book.user.profile_image.attached? %>
                <%= link_to user_path(book.user) do %>
                  <%= image_tag book.user.profile_image, size: "100x100", alt: "ユーザーのプロフィール画像" %>
                <% end %>
              <% else %>
                <%= link_to user_path(book.user) do %>
                  <%= image_tag 'no_image.png', size: "100x100", alt: "デフォルトのプロフィール画像" %>
                <% end %>
              <% end %>
            </td>
    
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

</div>


<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>


